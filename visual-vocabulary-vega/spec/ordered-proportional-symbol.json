{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "todo",
  "title": "Ordered proportional symbol",
  "width": 400,
  "height": 250,
  "padding": 5,
  "autosize": {"type": "fit", "contains": "padding"},

  "data": [
    {
      "name": "source",
      "url": "./spec/data/ordered-proportional-symbol.csv",
      "format": {"type": "csv", "parse": "auto"}
    }
  ],


  "scales": [
    {
      "name": "x",
      "type": "linear",
      "nice": true,
      "zero": false,
      "domain": {"data": "source", "field": "Murder Rate"},
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": false,
      "domain": {"data": "source", "field": "Burglary Rate"},
      "range": "height"
    },
    {
      "name": "size",
      "type": "linear",
      "round": true,
      "nice": false,
      "zero": true,
      "domain": {"data": "source", "field": "Population Size"},
      "range": [4, 361]
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 5,
      "title": "Murder Rate"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "titlePadding": 5,
      "title": "Burglary Rate"
    }
  ],

  "marks": [
    {
      "type": "symbol",
      "from": {"data": "source"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "Murder Rate"},
          "y": {"scale": "y", "field": "Burglary Rate"},
          "size": {"scale": "size", "field": "Population Size"},
          "shape": {"value": "circle"},
          "opacity": {"value": 0.7},
          "stroke": {"value": "#ffffff"},
          "fill": {"value": "#0f7b9e"},
          "tooltip": {"signal": "datum"}
        }
      }
    }
  ]
}
